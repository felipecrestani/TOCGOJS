@model List<TOCGOJS.Models.Project>

<h2>Projects</h2>

<br />

@Html.ActionLink("New", "New", "Project", null, new { @class = "btn btn-sm btn-default" })

<br />
<br />

@foreach (var item in Model)
{
    <div class="panel panel-default" style="width:300px" >
        <div class="panel-heading">
            <h3 class="panel-title">@item.Name</h3>            
        </div>
        <div class="panel-body">
            @item.Description

            <br />

            @Html.ActionLink("New Tree","New","Tree",new { @projectId=@item.Id }, null)

            <br /><br />

            @foreach (var tree in item.CurrentRealityTrees)
            {
                @Html.ActionLink(tree.Name, "Edit", "Tree", new { @id = tree.Id }, null)
                <br /><br />
            }
        </div>
    </div>
}
